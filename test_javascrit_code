<html>
	<head>
		<meta charset="UTF-8">
		<script type="text/javascript">
		document.getElementById("clickON").onclick(function(){
					var a = new XMLHttpRequest();
					a.open("GET","pinon.php");
					a.send();
		});
		document.getElementById("clickOFF").onclick(function(){
					var a = new XMLHttpRequest();
					a.open("GET","pinoff.php");
					a.send();
		});
		</script>
		
		<title>Pi Controller</title>

	</head>

	<body>
		<button type="button" id="clickON">ON</button><br>
		<button type="button" id="clickOFF">OFF</button><br>

	</body>


</html>
